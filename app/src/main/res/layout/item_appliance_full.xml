<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_hard_shadow"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvApplianceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Appliance Name"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnEditAppliance"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_avatar_circle"
            android:src="@drawable/ic_settings"
            android:padding="4dp"
            app:tint="@color/text_secondary" />

        <ImageButton
            android:id="@+id/btnDeleteAppliance"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_avatar_circle"
            android:src="@drawable/ic_add"
            android:rotation="45"
            android:padding="4dp"
            app:tint="@color/coral" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvApplianceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="130W 24.0 hrs/day"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvApplianceCarbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="0.000 kg COâ‚‚/day"
        android:textColor="@color/matcha_green"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
