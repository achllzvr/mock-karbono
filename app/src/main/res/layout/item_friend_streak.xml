<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_avatar_circle"
            android:padding="4dp"
            app:shapeAppearanceOverlay="@style/CircleImageStyle"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/shadow_gray"
            android:scaleType="centerCrop"
            android:contentDescription="Friend Streaks" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/text_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:translationZ="10dp"
        app:cardCornerRadius="16dp"
        android:background="@drawable/bg_streak_counter"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="ðŸ”¥"
            android:textColor="@color/cream_background"
            android:contentDescription="References" />

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="1"
            android:textColor="@color/cream_background"
            android:contentDescription="References" />

    </LinearLayout>

</FrameLayout>
