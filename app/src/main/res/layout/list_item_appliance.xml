<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvApplianceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appliance Name"
                android:textSize="16sp"
                android:textColor="@color/colorOnBackground"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvApplianceWattage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100W"
                    android:textSize="12sp"
                    android:textColor="@color/colorCarbonGray"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvApplianceHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.0 hrs/day"
                    android:textSize="12sp"
                    android:textColor="@color/colorCarbonGray" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvApplianceCO2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.640 kg"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvApplianceSyncStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnEditAppliance"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit appliance"
                    android:layout_marginEnd="4dp" />

                <ImageButton
                    android:id="@+id/btnDeleteAppliance"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete appliance" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

