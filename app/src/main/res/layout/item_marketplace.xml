<?xml version="1.0" encoding="utf-8"?>
<!-- Marketplace Item Card - Soft Pop Style with Hard Shadow -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_card_hard_shadow"
    android:padding="16dp">

    <!-- Item Image -->
    <ImageView
        android:id="@+id/imgMarketItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_avatar_circle"
        android:src="@drawable/ic_tree"
        android:contentDescription="Marketplace Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Item Title -->
    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mango Tree"
        android:textSize="18sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/imgMarketItem"
        app:layout_constraintStart_toEndOf="@id/imgMarketItem"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Item Description -->
    <TextView
        android:id="@+id/tvItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Offsets 12kg COâ‚‚/year"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemTitle"
        app:layout_constraintStart_toEndOf="@id/imgMarketItem"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Price Button -->
    <TextView
        android:id="@+id/btnBuyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚±500 + ðŸŒ³2"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_button_green"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemDescription"
        app:layout_constraintStart_toEndOf="@id/imgMarketItem" />

</androidx.constraintlayout.widget.ConstraintLayout>

