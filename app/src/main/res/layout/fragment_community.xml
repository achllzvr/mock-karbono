<?xml version="1.0" encoding="utf-8"?>
<!-- Community Fragment - Soft Pop Style with Podium -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cream_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Streaks"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <!-- Friend Streaks -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false">
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFriendStreaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_friend_streak" />
        </HorizontalScrollView>


        <!-- Leaderboard Card with Hard Shadow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† Weekly Leaderboard"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Podium Section -->
            <LinearLayout
                android:id="@+id/podiumContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp">

                <!-- 2nd Place -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgSecondPlace"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_avatar_circle_second"
                        android:padding="4dp"
                        app:shapeAppearanceOverlay="@style/CircleImageStyle"
                        app:strokeWidth="1.5dp"
                        app:strokeColor="@color/shadow_gray"
                        android:scaleType="centerCrop"
                        android:contentDescription="2nd Place" />

                    <TextView
                        android:id="@+id/tvSecondName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maria"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvSecondScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.2 kg"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Silver Podium -->
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_rounded_top_corners_second"
                        android:text="2nd"
                        android:textSize="12sp"
                        android:textColor="@color/cream_background"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- 1st Place (Taller) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘‘"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgFirstPlace"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/bg_avatar_circle_first"
                        android:padding="4dp"
                        app:shapeAppearanceOverlay="@style/CircleImageStyle"
                        app:strokeWidth="1.5dp"
                        app:strokeColor="@color/shadow_gray"
                        android:scaleType="centerCrop"
                        android:contentDescription="1st Place" />

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvFirstScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.8 kg"
                        android:textSize="12sp"
                        android:textColor="@color/matcha_green"
                        android:textStyle="bold" />

                    <!-- Gold Podium -->
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_rounded_top_corners_first"
                        android:text="1st"
                        android:textSize="12sp"
                        android:textColor="@color/cream_background"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- 3rd Place -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgThirdPlace"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_avatar_circle_third"
                        android:padding="4dp"
                        app:shapeAppearanceOverlay="@style/CircleImageStyle"
                        app:strokeWidth="1.5dp"
                        app:strokeColor="@color/shadow_gray"
                        android:scaleType="centerCrop"
                        android:contentDescription="3rd Place" />

                    <TextView
                        android:id="@+id/tvThirdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anna"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvThirdScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5 kg"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Bronze Podium -->
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_rounded_top_corners_third"
                        android:text="3rd"
                        android:textSize="12sp"
                        android:textColor="@color/cream_background"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Ranks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_pill_green"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#12"
                    android:textSize="16sp"
                    android:textColor="@color/matcha_green"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your current rank"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvYourScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.8 kg"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Communities Section -->
        <TextView
            android:id="@+id/tvCommunities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Communities"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Communities RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCommunities"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            app:layout_constraintTop_toBottomOf="@id/tvCommunities"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_community_groups" />

        <!-- Forum Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Discussions"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Forum Topic 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips for reducing phone usage?"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @eco_warrior â€¢ 23 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Forum Topic 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best energy-efficient appliances 2025"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @green_living â€¢ 45 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Forum Topic 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celebrating my first carbon-neutral week! ðŸŽ‰"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @nature_love â€¢ 67 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Forum Topic 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone tried the tree planting program?"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @plant_parent â€¢ 31 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
