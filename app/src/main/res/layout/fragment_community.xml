<?xml version="1.0" encoding="utf-8"?>
<!-- Community Fragment - Soft Pop Style with Podium -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvCommunityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community"
            android:textSize="28sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCommunitySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compete and connect with others"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Leaderboard Card with Hard Shadow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† Weekly Leaderboard"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Podium Section -->
            <LinearLayout
                android:id="@+id/podiumContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp">

                <!-- 2nd Place -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/imgSecondPlace"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:scaleType="centerCrop"
                        android:contentDescription="2nd Place" />

                    <TextView
                        android:id="@+id/tvSecondName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maria"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvSecondScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.2 kg"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Silver Podium -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:background="@color/shadow_gray"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- 1st Place (Taller) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘‘"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <ImageView
                        android:id="@+id/imgFirstPlace"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:scaleType="centerCrop"
                        android:contentDescription="1st Place" />

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvFirstScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.8 kg"
                        android:textSize="12sp"
                        android:textColor="@color/matcha_green"
                        android:textStyle="bold" />

                    <!-- Gold Podium -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/marigold"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- 3rd Place -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:id="@+id/imgThirdPlace"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_avatar_circle"
                        android:scaleType="centerCrop"
                        android:contentDescription="3rd Place" />

                    <TextView
                        android:id="@+id/tvThirdName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anna"
                        android:textSize="12sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvThirdScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5 kg"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <!-- Bronze Podium -->
                    <View
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:background="@color/coral"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Your Rank -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_pill_green"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#12"
                    android:textSize="16sp"
                    android:textColor="@color/matcha_green"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your current rank"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvYourScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.8 kg"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Forum Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¬ Community Discussions"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Forum Topic 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips for reducing phone usage?"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @eco_warrior â€¢ 23 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Forum Topic 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best energy-efficient appliances 2025"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @green_living â€¢ 45 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Forum Topic 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celebrating my first carbon-neutral week! ðŸŽ‰"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @nature_love â€¢ 67 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Forum Topic 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anyone tried the tree planting program?"
                android:textSize="15sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted by @plant_parent â€¢ 31 replies"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

