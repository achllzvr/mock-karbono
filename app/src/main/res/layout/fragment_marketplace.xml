<?xml version="1.0" encoding="utf-8"?>
<!-- Marketplace Fragment - Soft Pop Style with Tabs -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tvMarketplaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marketplace"
        android:textSize="28sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMarketplaceSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offset your carbon footprint"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvMarketplaceTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tab Container with Hard Shadow -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:padding="4dp"
        android:background="@drawable/bg_tab_container"
        app:layout_constraintTop_toBottomOf="@id/tvMarketplaceSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabPlantTrees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŒ³ Plant Trees"
            android:textSize="13sp"
            android:textColor="@color/card_white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/bg_button_green"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />

        <TextView
            android:id="@+id/tabAppliances"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”Œ Appliances"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />

        <TextView
            android:id="@+id/tabThrift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘• Thrift"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />

    </LinearLayout>

    <!-- Marketplace Items RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMarketplaceItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tabContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_marketplace" />

</androidx.constraintlayout.widget.ConstraintLayout>

