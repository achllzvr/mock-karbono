<?xml version="1.0" encoding="utf-8"?>
<!-- Custom Top Bar - Soft Pop Style with Avatar and Tree Lives Pill -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topBarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <!-- Left: Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"

        android:background="@drawable/bg_avatar_circle"

        app:strokeWidth="1.5dp"
        app:strokeColor="@color/shadow_gray"

        app:shapeAppearanceOverlay="@style/CircleImageStyle"

        android:padding="4dp"

        android:src="@drawable/bg_avatar"
        android:scaleType="centerCrop"
        android:contentDescription="User Avatar"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Right: Pill Container with Cloud + Tree Lives -->
    <LinearLayout
        android:id="@+id/pillContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_pill_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Sync Cloud Icon -->
        <ImageView
            android:id="@+id/imgCloudSync"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cloud_sync"
            android:contentDescription="Sync Status"
            app:tint="@color/matcha_green" />

        <!-- Left spacer -->
        <View
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="@color/matcha_green" />

        <!-- Right spacer -->
        <View
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <!-- Tree Icon -->
        <ImageView
            android:id="@+id/imgTreeIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_tree"
            android:contentDescription="Tree Lives" />

        <!-- Tree Lives Count -->
        <TextView
            android:id="@+id/tvTreeLives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/matcha_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

