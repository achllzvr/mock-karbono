<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Dialog Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_appliance_title"
            android:textSize="22sp"
            android:textColor="@color/colorOnBackground"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Appliance Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/appliance_name_hint"
            app:boxBackgroundColor="@color/colorBackground"
            app:boxStrokeColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApplianceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnBackground"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Power Consumption Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/power_consumption_hint"
            app:boxBackgroundColor="@color/colorBackground"
            app:boxStrokeColor="@color/colorAccent"
            app:suffixText="@string/watts">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPowerConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnBackground"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Daily Hours Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/daily_hours_hint"
            app:boxBackgroundColor="@color/colorBackground"
            app:boxStrokeColor="@color/colorAccent"
            app:suffixText="@string/hours_per_day">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDailyHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOnBackground"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Estimated Impact Display -->
        <TextView
            android:id="@+id/tvEstimatedImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estimated_impact_placeholder"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="@color/colorCarbonGray"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorBackground" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

