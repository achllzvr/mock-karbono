<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <!-- Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <EditText
            android:id="@+id/etSearchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_notifications"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorOnBackground"
            android:textColorHint="@color/colorCarbonGray"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:drawableTint="@color/colorCarbonGray" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Stats Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorSurface"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNotificationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 notifications today"
                    android:textSize="16sp"
                    android:textColor="@color/colorOnBackground"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvNotificationCarbon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0000 kg COâ‚‚"
                    android:textSize="14sp"
                    android:textColor="@color/colorCarbonGray"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Recent Notifications Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_notifications"
        android:textSize="18sp"
        android:textColor="@color/colorOnBackground"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="12dp" />

    <!-- Notifications List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

