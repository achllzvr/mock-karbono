<?xml version="1.0" encoding="utf-8"?>
<!-- Dashboard Fragment - Soft Pop / Duolingo Style with Mascot -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar with Avatar and Tree Lives -->
            <include
                layout="@layout/view_top_bar"
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Vine Path / Weekly Progress Header -->
            <LinearLayout
                android:id="@+id/vinePathContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:background="@color/cream_background">

                <!-- Day 1 (Sun) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_day_seed_inactive"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Sunday"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Day 2 (Mon) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_day_seed_inactive"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Monday"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Day 3 (Tue) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_day_seed_inactive"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Tuesday"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Day 4 (Wed) - Today -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay4"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_day_seed_active"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Wednesday - Today"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textSize="11sp"
                        android:textColor="@color/matcha_green"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Day 5 (Thu) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_day_seed_inactive"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Thursday"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Day 6 (Fri) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_day_seed_inactive"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Friday"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Day 7 (Sat) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/seedDay7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_day_seed_inactive"
                        android:src="@drawable/ic_leaf"
                        android:scaleType="centerInside"
                        android:padding="8dp"
                        android:contentDescription="Saturday"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Mascot Section with Leaves Container -->
            <FrameLayout
                android:id="@+id/mascotContainer"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginHorizontal="16dp">

                <!-- Falling Leaves Container (for particle effect) -->
                <FrameLayout
                    android:id="@+id/leavesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Mascot Image -->
                <ImageView
                    android:id="@+id/imgMascot"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/mascot_happy"
                    android:scaleType="fitCenter"
                    android:contentDescription="Karbono Mascot" />

                <!-- Speech Bubble -->
                <LinearLayout
                    android:id="@+id/speechBubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_speech_bubble"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvMascotMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looking good! ðŸŒ±"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"
                        android:maxWidth="140dp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Today's Carbon Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Carbon"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTodayCarbon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.4"
                        android:textSize="48sp"
                        android:textColor="@color/matcha_green"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kg"
                        android:textSize="24sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvCarbonStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“ Within daily limit (6.8 kg)"
                    android:textSize="13sp"
                    android:textColor="@color/matcha_green"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Bento Box Cards Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- Smartphone Card -->
                <LinearLayout
                    android:id="@+id/cardSmartphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_hard_shadow"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/marigold"
                            android:contentDescription="Phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smartphone"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPhoneCarbonValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.8 kg"
                        android:textSize="24sp"
                        android:textColor="@color/marigold"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <!-- Top Apps List -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top apps:"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvTopApp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ TikTok: 2h"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvTopApp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ YouTube: 1.5h"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvTopApp3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Instagram: 45m"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Appliances Card -->
                <LinearLayout
                    android:id="@+id/cardAppliances"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_hard_shadow"
                    android:padding="16dp"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_appliance"
                            app:tint="@color/coral"
                            android:contentDescription="Appliances" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appliances"
                            android:textSize="14sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvApplianceCarbonValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.6 kg"
                        android:textSize="24sp"
                        android:textColor="@color/coral"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp" />

                    <!-- Top Appliances List -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active:"
                        android:textSize="11sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvTopAppliance1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ AC: 8h"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvTopAppliance2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Refrigerator: 24h"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvTopAppliance3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ TV: 3h"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Quick Action Button -->
            <TextView
                android:id="@+id/btnStartTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button_green"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="Start Tracking ðŸŒ¿"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

