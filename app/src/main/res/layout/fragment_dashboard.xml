<?xml version="1.0" encoding="utf-8"?>
<!-- Dashboard with Duolingo-inspired top bar and weekly progress -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Duolingo-style Top Stats Bar -->
            <LinearLayout
                android:id="@+id/topStatsBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorAccent"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:gravity="center"
                android:elevation="4dp">

                <!-- Streak Counter -->
                <LinearLayout
                    android:id="@+id/streakContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="2dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_streak"
                        android:contentDescription="@string/streak_icon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvStreakValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="4dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <!-- Phone Carbon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        android:contentDescription="@string/phone_carbon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvPhoneCarbon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0.18"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:layout_marginStart="1dp" />

                </LinearLayout>

                <!-- Appliances Carbon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_appliance"
                        android:contentDescription="@string/appliances_carbon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvAppliancesCarbon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0.45"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:layout_marginStart="1dp" />

                </LinearLayout>

                <!-- Notifications Carbon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_notification"
                        android:contentDescription="@string/notifications_carbon"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvNotificationsCarbon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0.15"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        android:layout_marginStart="1dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Main Content Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <!-- Hero Metric Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardBackgroundColor="@color/colorSurface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_extra_large"
                        android:gravity="center">

                        <!-- Progress Ring -->
                        <com.achllzvr.mockkarbono.ui.views.CircularProgressView
                            android:id="@+id/progressRing"
                            android:layout_width="200dp"
                            android:layout_height="200dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today_total"
                            android:textSize="16sp"
                            android:textColor="@color/colorCarbonGray"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="@dimen/spacing_large" />

                        <TextView
                            android:id="@+id/tvTodayTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.78"
                            android:textSize="48sp"
                            android:textColor="@color/colorOnBackground"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginTop="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kg_co2"
                            android:textSize="16sp"
                            android:textColor="@color/colorCarbonGray"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvSafeRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/safe_range_label"
                            android:textSize="14sp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="@dimen/spacing_medium" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Weekly Progress Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardBackgroundColor="@color/colorSurface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/your_progress"
                                android:textSize="18sp"
                                android:textColor="@color/colorOnBackground"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvWeekLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/this_week"
                                android:textSize="13sp"
                                android:textColor="@color/colorCarbonGray"
                                android:fontFamily="sans-serif"
                                android:drawableEnd="@drawable/ic_chevron_down"
                                android:drawablePadding="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </LinearLayout>

                        <!-- Weekly Progress Circles -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Day 1 (Sunday) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingHorizontal="2dp">

                                <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                    android:id="@+id/dayCircle1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:id="@+id/tvDay1Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sun"
                                    android:textSize="11sp"
                                    android:textColor="@color/colorCarbonGray"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="6dp" />

                            </LinearLayout>

                        <!-- Day 2 (Monday) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingHorizontal="2dp">

                            <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                android:id="@+id/dayCircle2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/tvDay2Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mon"
                                android:textSize="11sp"
                                android:textColor="@color/colorCarbonGray"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="6dp" />

                        </LinearLayout>

                        <!-- Day 3 (Tuesday) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:paddingHorizontal="2dp">

                            <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                android:id="@+id/dayCircle3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/tvDay3Label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tue"
                                android:textSize="11sp"
                                android:textColor="@color/colorCarbonGray"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="6dp" />

                        </LinearLayout>

                            <!-- Day 4 (Wednesday) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingHorizontal="2dp">

                                <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                    android:id="@+id/dayCircle4"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:id="@+id/tvDay4Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wed"
                                    android:textSize="11sp"
                                    android:textColor="@color/colorCarbonGray"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="6dp" />

                            </LinearLayout>

                            <!-- Day 5 (Thursday) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingHorizontal="2dp">

                                <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                    android:id="@+id/dayCircle5"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:id="@+id/tvDay5Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thu"
                                    android:textSize="11sp"
                                    android:textColor="@color/colorCarbonGray"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="6dp" />

                            </LinearLayout>

                            <!-- Day 6 (Friday) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingHorizontal="2dp">

                                <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                    android:id="@+id/dayCircle6"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:id="@+id/tvDay6Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fri"
                                    android:textSize="11sp"
                                    android:textColor="@color/colorCarbonGray"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="6dp" />

                            </LinearLayout>

                            <!-- Day 7 (Saturday) -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:paddingHorizontal="2dp">

                                <com.achllzvr.mockkarbono.ui.views.DayProgressCircle
                                    android:id="@+id/dayCircle7"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:id="@+id/tvDay7Label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sat"
                                    android:textSize="11sp"
                                    android:textColor="@color/colorCarbonGray"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="6dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_actions"
                    android:textSize="18sp"
                    android:textColor="@color/colorOnBackground"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_medium" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_huge"
                    app:cardBackgroundColor="@color/colorSurface"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_large"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unsynced_items"
                                android:textSize="14sp"
                                android:textColor="@color/colorCarbonGray"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvUnsyncedBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="20sp"
                                android:textColor="@color/colorOnBackground"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnForceSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/force_sync"
                            android:textSize="14sp"
                            android:textColor="@color/colorOnBackground"
                            android:fontFamily="sans-serif-medium"
                            app:cornerRadius="@dimen/button_corner_radius"
                            app:backgroundTint="@color/colorAccent" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

