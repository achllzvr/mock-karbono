<?xml version="1.0" encoding="utf-8"?>
<!-- Profile Fragment - Soft Pop Style -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Profile Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="24dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgProfileAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_avatar_circle"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Avatar" />

            <!-- Username -->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoWarrior_PH"
                android:textSize="22sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp" />

            <!-- Join Date -->
            <TextView
                android:id="@+id/tvJoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member since Dec 2025"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <!-- Streak Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvStreakStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="24sp"
                        android:textColor="@color/marigold"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Streak"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Trees Planted Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTreesPlanted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="24sp"
                        android:textColor="@color/matcha_green"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trees Planted"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- CO2 Saved Stat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvCO2Saved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24kg"
                        android:textSize="24sp"
                        android:textColor="@color/coral"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COâ‚‚ Offset"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Badges Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ… Achievements"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Badges Grid (2 rows x 4 columns) -->
            <GridLayout
                android:id="@+id/badgesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:alignmentMode="alignBounds">

                <!-- Badge 1: First Tree -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tree"
                        android:background="@drawable/bg_badge_unlocked"
                        android:padding="10dp"
                        android:contentDescription="First Tree Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Tree"
                        android:textSize="10sp"
                        android:textColor="@color/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 2: 7 Day Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_streak"
                        android:background="@drawable/bg_badge_unlocked"
                        android:padding="10dp"
                        android:contentDescription="7 Day Streak Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 Day"
                        android:textSize="10sp"
                        android:textColor="@color/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 3: Eco Warrior -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_leaf"
                        android:background="@drawable/bg_badge_unlocked"
                        android:padding="10dp"
                        android:contentDescription="Eco Warrior Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eco Hero"
                        android:textSize="10sp"
                        android:textColor="@color/text_dark"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 4: Top 10 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_community"
                        android:background="@drawable/bg_badge_locked"
                        android:padding="10dp"
                        android:contentDescription="Top 10 Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 10"
                        android:textSize="10sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 5: 30 Day Streak (Locked) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_streak"
                        android:background="@drawable/bg_badge_locked"
                        android:padding="10dp"
                        android:contentDescription="30 Day Streak Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 Days"
                        android:textSize="10sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 6: Carbon Zero (Locked) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_leaf"
                        android:background="@drawable/bg_badge_locked"
                        android:padding="10dp"
                        android:contentDescription="Carbon Zero Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zero COâ‚‚"
                        android:textSize="10sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 7: Forest Maker (Locked) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tree"
                        android:background="@drawable/bg_badge_locked"
                        android:padding="10dp"
                        android:contentDescription="Forest Maker Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Trees"
                        android:textSize="10sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Badge 8: Champion (Locked) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_community"
                        android:background="@drawable/bg_badge_locked"
                        android:padding="10dp"
                        android:contentDescription="Champion Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Champion"
                        android:textSize="10sp"
                        android:textColor="@color/text_tertiary"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </GridLayout>

        </LinearLayout>

        <!-- Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_hard_shadow"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Settings"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- App Preferences Button -->
            <LinearLayout
                android:id="@+id/btnAppPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Preferences" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="App Preferences"
                    android:textSize="15sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- Notifications Button -->
            <LinearLayout
                android:id="@+id/btnNotificationSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    app:tint="@color/text_secondary"
                    android:contentDescription="Notifications" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification Settings"
                    android:textSize="15sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <!-- About Button -->
            <LinearLayout
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/text_secondary"
                    android:contentDescription="About" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About Karbono"
                    android:textSize="15sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_tertiary"
                    android:contentDescription="Go" />

            </LinearLayout>

        </LinearLayout>

        <!-- Logout Button -->
        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textSize="16sp"
            android:textColor="@color/coral"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/bg_card_hard_shadow"
            android:paddingVertical="16dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>

