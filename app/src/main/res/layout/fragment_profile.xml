<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Header -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/bg_avatar_circle"

            app:strokeWidth="1.5dp"
            app:strokeColor="@color/shadow_gray"

            app:shapeAppearanceOverlay="@style/CircleImageStyle"

            android:padding="8dp"
            android:layout_margin="4dp"

            android:src="@drawable/img_asian_male_avatar"
            android:scaleType="centerCrop"
            android:contentDescription="User Avatar" />

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Achilles Vonn Rabina"
            android:textColor="@color/text_dark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@avrabina"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Stats Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <include layout="@layout/item_stat_card" android:id="@+id/statCardCo2"/>
            <include layout="@layout/item_stat_card" android:id="@+id/statCardStreak"/>
            <include layout="@layout/item_stat_card" android:id="@+id/statCardTrees"/>

        </LinearLayout>

        <!-- My Achievements -->
        <LinearLayout
            android:id="@+id/achievementsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_hard_shadow"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Achievements"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAchievements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvViewAllAchievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="View All"
                android:textColor="@color/matcha_green"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Transaction History -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_card_hard_shadow"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction History"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

             <TextView
                android:id="@+id/tvViewAllTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="View All"
                android:textColor="@color/matcha_green"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

             <TextView
                android:id="@+id/btnAccountSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_hard_shadow"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:text="Account Settings"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnAppPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_button_green"
                android:drawableStart="@drawable/ic_tune"
                android:drawablePadding="12dp"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:text="App Preferences"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
